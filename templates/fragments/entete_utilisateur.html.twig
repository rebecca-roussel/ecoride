{# templates/fragments/entete_utilisateur.html.twig #}
<header class="entete">
  <div class="conteneur entete_contenu">

    <p class="logo">EcoRide</p>

    {# Bouton menu mobile #}
    <button
      class="bouton_menu"
      type="button"
      aria-controls="navigation_principale"
      aria-expanded="false"
    >
      <span class="bouton_menu_icone" aria-hidden="true"></span>
      <span class="bouton_menu_texte">Menu</span>
    </button>

    {# Navigation principale utilisateur #}
    <nav
      id="navigation_principale"
      class="navigation"
      aria-label="Navigation principale"
      data-ouvert="false"
    >

      {# Lien espace utilisateur #}
      <a class="nav_lien"
         href="{{ path('espace_utilisateur') }}">
        Mon espace
      </a>

      {# Lien recherche #}
      <a class="nav_lien"
         href="{{ path('recherche') }}">
        Rechercher
      </a>

      {# Déconnexion : FORMULAIRE dans la navigation #}
      <form
        class="navigation_formulaire"
        action="{{ path('deconnexion') }}"
        method="post"
      >
        <button class="nav_lien" type="submit">
          Déconnexion
        </button>
      </form>

      {# Lien contact #}
      <a class="nav_lien"
         href="{{ path('contact') }}">
        Contact
      </a>

    </nav>
  </div>
</header>


