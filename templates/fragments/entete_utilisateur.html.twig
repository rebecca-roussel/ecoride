{# templates/fragments/entete_utilisateur.html.twig #}
<header class="entete">
  <div class="conteneur entete_contenu">

    <p class="logo">EcoRide</p>

    <button
      class="bouton_menu"
      type="button"
      aria-controls="navigation_principale"
      aria-expanded="false"
    >
      <span class="bouton_menu_icone" aria-hidden="true"></span>
      <span class="bouton_menu_texte">Menu</span>
    </button>

    <nav
      id="navigation_principale"
      class="navigation"
      aria-label="Navigation principale"
      data-ouvert="false"
    >
      <!-- Espace Utilisateur -->
      <a class="nav_lien {% if app.request.attributes.get('_route') == 'espace_utilisateur' %}actif{% endif %}"
         {% if app.request.attributes.get('_route') == 'espace_utilisateur' %}aria-current="page"{% endif %}
         href="{{ path('espace_utilisateur') }}">
        Mon espace
      </a>

      <!-- Recherche -->
      <a class="nav_lien {% if app.request.attributes.get('_route') == 'recherche' %}actif{% endif %}"
         {% if app.request.attributes.get('_route') == 'recherche' %}aria-current="page"{% endif %}
         href="{{ path('recherche') }}">
        Rechercher
      </a>

      <!-- Déconnexion -->
      <a class="nav_lien {% if app.request.attributes.get('_route') == 'deconnexion' %}actif{% endif %}"
         {% if app.request.attributes.get('_route') == 'deconnexion' %}aria-current="page"{% endif %}
         href="{{ path('deconnexion') }}">
        Déconnexion
      </a>

      <!-- Contact -->
      <a class="nav_lien {% if app.request.attributes.get('_route') == 'contact' %}actif{% endif %}"
         {% if app.request.attributes.get('_route') == 'contact' %}aria-current="page"{% endif %}
         href="#contact">
        Contact
      </a>

    </nav>

  </div>
</header>


